{
  "expo": {
    "scheme": "acme",
    "version": "1.0.0",
    "name": "SmartStudy",
    "slug": "SmartStudy",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#F4F1DE"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#F4F1DE"
      }
    },
    "web": {
      "bundler": "metro",
      "favicon": "./assets/favicon.png"     
    }
  }
}
